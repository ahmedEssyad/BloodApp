<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText android:id="@+id/name" android:hint="Nom" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/phone" android:hint="Téléphone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/bloodType" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/location" android:hint="Localisation" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/email" android:hint="Email (optionnel)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/lastDonation" android:hint="Dernier don (yyyy-MM-dd)" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button android:id="@+id/submitBtn" android:text="Soumettre" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
